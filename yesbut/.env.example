# YesBut Environment Variables Template
# Copy this file to .env and fill in the values
#
# SECURITY WARNING: Never commit .env files with real credentials to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=YesBut
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL with pgvector)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=yesbut
POSTGRES_USER=yesbut_user
POSTGRES_PASSWORD=your-postgres-password-here
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================
# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI API (optional, for embeddings)
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# MCP SERVER CONFIGURATIONS (External Data Sources)
# =============================================================================
# Tavily Search API
TAVILY_API_KEY=your-tavily-api-key-here

# Firecrawl Web Scraping
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# Brave Search API
BRAVE_API_KEY=your-brave-api-key-here

# Serper Google Search API
SERPER_API_KEY=your-serper-api-key-here

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
